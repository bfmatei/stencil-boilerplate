@import 'animations.pcss';

app-rich-editor-label {
  position: absolute;
  top: 0;
  transition: all var(--animationDuration) var(--animationTiming);
  transform: scale(1) translate(0, 15px);
  transform-origin: left top 0;
  width: 100%;
  height: 100%;
  user-select: none;
  font-size: 16px;
  color: rgba(0, 0, 0, 0.3);

  &.active {
    width: auto;
    height: auto;
    pointer-events: none;
    transform: scale(0.75);
    color: rgb(72, 187, 152);
  }
}
