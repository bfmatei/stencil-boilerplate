@import 'colors.pcss';

app-splash {
  display: grid;
  grid-template-areas:
    'app-splash-container'
    'app-splash-loader';
  height: 100vh;
  width: 100vw;
  background-color: var(--white);

  & > .logo {
    grid-area: app-splash-container;
    align-self: center;
    justify-self: center;
    box-sizing: border-box;
    width: 100%;
    max-width: 350px;
    height: 100%;
    max-height: 350px;
  }

  & > .loader {
    grid-area: app-splash-loader;
    align-self: center;
  }
}
